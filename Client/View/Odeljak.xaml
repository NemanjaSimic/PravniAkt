<Window x:Class="Client.View.Odeljak"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Client.View"
        mc:Ignorable="d"
        Title="Odeljak" Height="180.4" Width="405.6">
	<Grid>
		<Label Content="Unesite naslov odeljka:" FontSize="18" HorizontalAlignment="Left" Height="39" Margin="28,0,0,0" VerticalAlignment="Top" Width="314"/>
		<TextBox HorizontalAlignment="Left" Height="60" Margin="28,44,0,0" TextWrapping="Wrap" Text="{Binding Naslov}" VerticalAlignment="Top" Width="350"/>
		<Button Command="{Binding CreateOdeljakCommand}" Content="Sacuvaj" HorizontalAlignment="Left" Height="24" Margin="28,109,0,0" VerticalAlignment="Top" Width="350"/>

	</Grid>
</Window>
